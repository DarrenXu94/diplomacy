{
    "compilerOptions": {
        "module": "es2015",
        "target": "es2015",
        "strict": true,

        "jsx": "react",
        "jsxFactory": "jsx",

        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,

        "sourceMap": true,
        "declaration": true,
        "declarationDir": "declare"
    },
    "include": [
        "src/**/*.ts", "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
